{
  "name": "eslint-config-lifion",
  "version": "1.0.0",
  "description": "Lifion's ESLint config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lifion/eslint-config-lifion.git"
  },
  "keywords": [
    "config",
    "eslint",
    "eslintconfig",
    "javascript",
    "lifion",
    "styleguide"
  ],
  "author": "Edgardo Avilés <Edgardo.Avilés@ADP.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lifion/eslint-config-lifion/issues"
  },
  "homepage": "https://github.com/lifion/eslint-config-lifion#readme",
  "main": "lib/index.js",
  "engines": {
    "node": ">=8.6.0"
  },
  "scripts": {
    "eslint": "eslint . --ext .js,.json --cache",
    "format": "prettier --write '**/*.{md,js,json}' '!reports/**/*.{js,json}'",
    "jest": "TEST_REPORT_PATH=./reports jest",
    "jest-watch": "npm run jest -- --watch --coverageReporters=html",
    "lint": "eslint . --ext .js,.json --cache",
    "precommit": "lint-staged",
    "prejest": "mkdir -p ./reports",
    "test": "npm run jest && codecov",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "dependencies": {
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-es6-recommended": "^0.1.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.1",
    "eslint-plugin-jsdoc": "^3.8.0",
    "eslint-plugin-json": "^1.2.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.7.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^6.0.1"
  },
  "peerDependencies": {
    "eslint": "^4.19.1 || ^5.3.0",
    "prettier": "^1.14.3"
  },
  "devDependencies": {
    "auto-changelog": "^1.8.0",
    "codecov": "^3.1.0",
    "eslint": "^5.6.1",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3"
  },
  "auto-changelog": {
    "commitLimit": false,
    "template": "./templates/changelog-template.hbs"
  },
  "eslintConfig": {
    "extends": "./lib/index.js"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coverageDirectory": "../reports",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "rootDir": "lib",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "branchPrefix": "feature/renovate-",
    "rangeStrategy": "bump"
  }
}
