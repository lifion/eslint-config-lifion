{
  "name": "eslint-config-lifion",
  "version": "1.0.2",
  "description": "Lifion's ESLint config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lifion/eslint-config-lifion.git"
  },
  "keywords": [
    "config",
    "eslint",
    "eslintconfig",
    "javascript",
    "lifion",
    "styleguide"
  ],
  "author": "Edgardo Avilés <Edgardo.Avilés@ADP.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lifion/eslint-config-lifion/issues"
  },
  "homepage": "https://github.com/lifion/eslint-config-lifion#readme",
  "main": "lib/index.js",
  "engines": {
    "node": ">=8.6.0"
  },
  "scripts": {
    "eslint": "eslint . --ext .js,.json --cache",
    "format": "prettier --write '**/*.{md,js,json}' '!reports/**/*.{js,json}'",
    "jest": "JEST_JUNIT_OUTPUT=./reports/junit/js-test-results.xml jest",
    "jest-watch": "npm run jest -- --watch --coverageReporters=html",
    "lint": "eslint . --ext .js,.json --format junit -o ./reports/junit/js-lint-results.xml",
    "prepare": "check-engines",
    "test": "npm run jest -- --ci --runInBand && codecov",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "dependencies": {
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-es6-recommended": "^0.1.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-plugin-jsdoc": "^3.9.1",
    "eslint-plugin-json-light": "^1.0.3",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^6.0.1"
  },
  "peerDependencies": {
    "eslint": "^4.19.1 || ^5.3.0",
    "prettier": "^1.14.3"
  },
  "devDependencies": {
    "auto-changelog": "^1.10.0",
    "check-engines": "^1.5.0",
    "codecov": "^3.1.0",
    "eslint": "^5.9.0",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3"
  },
  "auto-changelog": {
    "commitLimit": false,
    "template": "./templates/CHANGELOG.hbs"
  },
  "eslintConfig": {
    "extends": "./lib/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coverageDirectory": "../reports/coverage",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "rootDir": "lib",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "renovate": {
    "branchPrefix": "feature/renovate-",
    "engines": {
      "enabled": false
    },
    "extends": [
      "config:base"
    ],
    "rangeStrategy": "bump"
  }
}
